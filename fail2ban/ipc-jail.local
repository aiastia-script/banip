[sshd]
enabled = true
filter = sshd
port        = ssh,22345,723
maxretry = 2                         # 最大尝试次数
findtime = 300                       # 发现周期 单位s
bantime = -1                        # 封禁时间，单位s。-1为永久封禁
action = %(action_mwl)s
banaction = iptables-multiport       # 禁用方式
logpath = /var/log/secure            # SSH 登陆日志位置


[blacklist]
enabled     = true
filter      = blacklist
banaction   = iptables-ipset-proto6-allports
port        = any
logpath     = /etc/fail2ban/ip.blacklist
maxretry    = 1
